{
  "name": "moltbot-work",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*/backend",
    "apps/*/landing",
    "apps/*/webapp"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "dev": "npm run dev -w apps/moltbank/backend",
    "db:init": "echo 'No migration needed with Firestore'"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6"
  }
}